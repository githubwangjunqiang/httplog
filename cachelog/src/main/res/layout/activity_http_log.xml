<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".HttpLogActivity">

    <ImageView
        android:id="@+id/xp_log_http_activity_ivlogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/xp_log_http_activity_tvtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/xp_log_http_activity_tvtitle" />

    <TextView
        android:id="@+id/xp_log_http_activity_tvtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="网络日志"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/xp_log_http_activity_filter"
        app:layout_constraintEnd_toStartOf="@+id/xp_log_http_activity_tvcount"
        app:layout_constraintStart_toEndOf="@+id/xp_log_http_activity_ivlogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xp_log_http_activity_tvcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:textColor="#666666"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/xp_log_http_activity_filter"
        app:layout_constraintEnd_toStartOf="@+id/xp_log_http_activity_filter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(100/50)" />

    <TextView
        android:id="@+id/xp_log_http_activity_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="筛选"
        android:textColor="#666666"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/xp_log_http_activity_swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xp_log_http_activity_filter">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/xp_log_http_activity_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</androidx.constraintlayout.widget.ConstraintLayout>